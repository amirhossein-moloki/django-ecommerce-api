# Test Environment Settings

# Core Django Settings
DJANGO_SETTINGS_MODULE=ecommerce_api.settings.test
SECRET_KEY=a-test-secret-key-that-is-not-secret
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Database (in-memory SQLite for tests)
DATABASE_URL=sqlite:///:memory:

# Cache (local memory cache for tests)
REDIS_URL=locmem://

# Email (console backend for tests)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Celery (run tasks synchronously for tests)
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=db+sqlite:///celery-results-test.sqlite
CELERY_TASK_ALWAYS_EAGER=True

# Dummy values for external services
SMS_IR_OTP_TEMPLATE_ID=12345
POSTEX_API_KEY=test-api-key
ZIBAL_MERCHANT_ID=zibal-test
ZIBAL_WEBHOOK_SECRET=a-very-secret-webhook-key

# Other settings
DOMAIN=test.com
SITE_NAME=Hypex Test
CORS_ALLOW_ALL_ORIGINS=True
