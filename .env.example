# =============================================================================
# DJANGO - CORE
# =============================================================================
DJANGO_SETTINGS_MODULE=ecommerce_api.settings.development

# Use a strong, unique secret key in production.
SECRET_KEY=change-me-to-a-strong-secret

# Toggle debug mode (must be False in production).
DEBUG=True

# Comma-separated allowed hosts.
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE & CACHE
# =============================================================================
POSTGRES_DB=app_db
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password

DATABASE_URL=postgres://app_user:app_password@database:5432/app_db
REDIS_URL=redis://cache:6379/1

# =============================================================================
# SECURITY - CORS & CSRF
# =============================================================================
# For development you can allow all origins.
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=False

# Comma-separated origins for CORS/CSRF (leave empty if allowing all origins).
CORS_ALLOWED_ORIGINS=
CSRF_TRUSTED_ORIGINS=

# =============================================================================
# EMAIL - SMTP
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# =============================================================================
# SITE & ADMINS
# =============================================================================
DOMAIN=localhost:8000
SITE_NAME=Hypex DEV
ADMINS=Dev:dev@example.local

# =============================================================================
# CERTBOT (used by docker-compose.prod.yml)
# =============================================================================
CERTBOT_EMAIL=dev@example.local

# =============================================================================
# CELERY
# =============================================================================
CELERY_BROKER_URL=redis://cache:6379/0
CELERY_RESULT_BACKEND=redis://cache:6379/0
CANCEL_PENDING_ORDERS_INTERVAL=600.0

# =============================================================================
# JWT
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# SOCIAL AUTH (GOOGLE)
# =============================================================================
GOOGLE_OAUTH2_KEY=
GOOGLE_OAUTH2_SECRET=

# =============================================================================
# SMS.ir
# =============================================================================
SMS_IR_OTP_TEMPLATE_ID=111111

# =============================================================================
# POSTEX
# =============================================================================
POSTEX_API_KEY=
POSTEX_SENDER_NAME=Your Company Name
POSTEX_SENDER_PHONE=09000000000
POSTEX_SENDER_ADDRESS=Your Company Address
POSTEX_SENDER_POSTAL_CODE=0000000000
POSTEX_FROM_CITY_CODE=1
POSTEX_SERVICE_TYPE=standard

# =============================================================================
# ZIBAL
# =============================================================================
ZIBAL_MERCHANT_ID=
ZIBAL_WEBHOOK_SECRET=
ZIBAL_ALLOWED_IPS=127.0.0.1

# =============================================================================
# OBSERVABILITY
# =============================================================================
OTEL_SERVICE_NAME=ecommerce-api-dev
OTEL_EXPORTER_OTLP_ENDPOINT=

# =============================================================================
# API & DOCUMENTATION
# =============================================================================
DRF_ANON_THROTTLE_RATE=10000/day
DRF_USER_THROTTLE_RATE=20000/day
API_DOCS_TITLE=Hypex DEV API
API_DOCS_DESCRIPTION=Development environment for Hypex eCommerce API
API_DOCS_VERSION=dev
